<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.CIS183_FinalProject_AminahBakr">

        <!--COVER PAGE = Launcher -->
        <activity
            android:name=".CoverPage"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".Register" />
        <activity android:name=".Search" />
        <activity android:name=".Favorites" />
        <activity android:name=".AddResources" />
        <activity android:name=".ManageProfile" />
        <activity android:name=".Details" />

        <!-- MainActivity is NOT launcher anymore -->
        <activity
            android:name=".MainActivity"
            android:exported="true" />

    </application>

</manifest>
